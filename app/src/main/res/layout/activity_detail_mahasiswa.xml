<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="25dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_mahasiswa"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        tools:src="@android:drawable/ic_menu_camera"/>

    <TextView
        android:id="@+id/tv_mahasiswa_nrp"
        android:layout_below="@id/tv_mahasiswa_name"
        android:text="NRP : "
        android:textSize="20sp"
        style="@style/TextViewDetailMahasiswa"/>

    <TextView
        android:id="@+id/tv_mahasiswa_name"
        android:layout_below="@id/img_mahasiswa"
        tools:text="Nama Mahasiswa"
        android:textSize="25sp"
        android:textStyle="bold"
        style="@style/TextViewDetailMahasiswa" />

    <TextView
        android:id="@+id/tv_mahasiswa_address"
        android:layout_below="@id/tv_mahasiswa_nrp"
        android:text="Alamat : "
        android:textSize="20sp"
        style="@style/TextViewDetailMahasiswa"/>
</RelativeLayout>